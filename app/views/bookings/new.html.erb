<h1>coucou</h1>

<%= form_for [@car, @booking] do |f| %>

  <%= f.date_field :start_date, placeholder: "Ajout le nom" %>

  <%=f.date_field :end_date, placeholder: "Ajout l'adresse" %>

  <%= f.submit :Création %>

<% end %>

  <p><%= @car.marque %></p>
  <p><%= @car.modele %></p>
  <p><%= @car.adresse %></p>
  <p><%= @car.prix %>€</p>

<% @car.bookings.each do |booking| %>
  <% if booking.user == current_user %>
    <p><%= booking.start_date %></p>
    <p><%= booking.end_date %></p>
  <% end %>
<% end %>

<%= link_to 'Back', cars_path %>
